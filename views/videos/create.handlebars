<div class="contents-container" id="create-video-container">
    <form action='/videos' method='post'>
      <label for="title-input">Title (required)</label>
      <input id="title-input" name="title" type="text" value="{{newVideo.title}}">
      {{#with newVideo.errors.title as |error|}}
        <span class="error">{{error.message}}</span>
      {{/with}}
      <label for="description-input">Description</label>
      <textarea id="description-input" name="description">{{newVideo.description}}</textarea>
      <label for="videoUrl-input">URL (required)</label>
      <input id="videoUrl-input" name="videoUrl" value="{{newVideo.videoUrl}}">
      {{#with newVideo.errors.videoUrl as |error|}}
        <span class="url-error">{{error.message}}</span>
      {{/with}}
      <button type='submit' class="input-button" id="save-button">Save a video</button>
    </form>
</div>
