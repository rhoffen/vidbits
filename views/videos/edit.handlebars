<div class="contents-container" id="create-video-container">
  <h2>Edit video</h2>
  <form action='/videos/{{video._id}}/edit' method='post'>
    <label for="title-input">Title (required)</label>
    <input id="title-input" name="title" type="text" value="{{video.title}}">
    {{#with updatedVideo.errors.title as |error|}}
      <span class="error">{{error.message}}</span>
      {{/with}}
      <label for="description-input">Description</label>
      <textarea id="description-input" name="description" value="{{video.description}}">{{video.description}}</textarea>
      <label for="videoUrl-input">URL (required)</label>
      <input id="videoUrl-input" name="videoUrl" value="{{video.videoUrl}}">
      {{#with updatedVideo.errors.videoUrl as |error|}}
      <span class="url-error">{{error.message}}</span>
      {{/with}}
      <button type='submit' class="input-button">Submit changes</button>
    </form>
</div>
